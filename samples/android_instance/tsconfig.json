{
  "compilerOptions": {
		"sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": false,
    "isolatedModules": true,
    "esModuleInterop":true,
    "allowSyntheticDefaultImports":true,
    "resolveJsonModule": true,
    "target": "es5",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist/",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@sass/*": ["./src/sass/*"],
      "@sdk/*": ["./src/sdk/*"]
    }
	},
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}    
